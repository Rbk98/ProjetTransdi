{% extends 'base.html.twig' %}

{% block title %}Mes classes{% endblock %}

{% block body %}

    {% include('enseignant/_nav_enseignant.html.twig') %}

    <h1 class="pt-1">Classe index</h1>
    <hr class="separateBlock">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>NbEleves</th>
                <th>Niveau</th>
                <th>Annee</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for classe in classes %}
            <tr>
                <td>{{ classe.id }}</td>
                <td>{{ classe.nom }}</td>
                <td>{{ classe.nbEleves }}</td>
                <td>{{ classe.niveau }}</td>
                <td>{{ classe.annee }}</td>
                <td>{{ classe.status }}</td>
                <td>
                    <a href="{{ path('classe_show', {'id': classe.id}) }}">show</a>
                    <a href="{{ path('classe_edit', {'id': classe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('enseignant') }}">Retour au menu</a>

{% endblock %}
