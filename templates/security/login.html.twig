{% extends 'base.html.twig' %}

{% block title %}Se connecter!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
        </div>
    {% endif %}

    <div class="titleUser">
        <h1 class="h3 fw-normal p-1">Connexion</h1>
    </div>
    <fieldset class="formUser">
        <label for="inputEmail">E-mail :</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-3" autocomplete="email" required autofocus>
        <label for="inputPassword">Mot de passe :</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}">
        <button class="btn btn-lg btn-primary mt-4" type="submit">
            Se connecter
        </button>
    </fieldset>

</form>
    <div>
        <p class="text-center">Vous n'avez pas de compte ? <a href="{{ path('utilisateur_new') }}">Créer son compte</a></p>
    </div>
{% endblock %}
